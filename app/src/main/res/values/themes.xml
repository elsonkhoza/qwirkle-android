<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qwirkle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/qwirkle_orage</item>
        <item name="colorPrimaryVariant">@color/qwirkle_orage</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/qwirkle_yellow</item>
        <item name="colorSecondaryVariant">@color/qwirkle_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuBackground">@drawable/popup_background</item>
        <item name="android:popupMenuStyle">@style/menu_style</item>
    </style>

    <style name="menu_style" parent="Widget.MaterialComponents.PopupMenu">

        <item name="android:popupBackground">@drawable/popup_background</item>


    </style>

</resources>